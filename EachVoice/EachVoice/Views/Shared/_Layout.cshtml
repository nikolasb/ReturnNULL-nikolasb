<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Each Voice</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/IndexStyleSheet.css" rel="stylesheet" type="text/css" />

</head>
<body class="bgc">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Each Voice", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("BillHub", "BillHub", "Home")</li>
                    <li>@Html.ActionLink("RepHub", "RepHub", "Home")</li>
                    @if (User.IsInRole("admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("User", "SearchToDeleteOrEdit", "SysAdmin")</li>
                                <li>@Html.ActionLink("Comment", "SearchToDeleteOrEdit", "SysAdmin")</li>
                                <li>@Html.ActionLink("Vote", "SearchToDeleteOrEdit", "SysAdmin")</li>
                            </ul>
                        </li>
                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

    </div>
    <div class="container body-content">

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - EACH VOICE</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("LocationScript", required: false)
    @RenderSection("IndexStyleSheet", required: false)
    @RenderSection("calendarScript", required: false)
</body>
</html>
